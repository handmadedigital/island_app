<div id="productPageWrapper">
	<div id="singleProductWrapper">
		<div class="row">
			<div class="col-sm-3 product-padding">
				<div class="single-product-image-wrapper center">
					<img src="{{model.product.image_src}}">
				</div>
			</div>
			<div class="col-sm-9 product-padding">
				<div class="ta-block-wrapper product">
					<div class="ta-block-title">
						<h5>{{upper-case model.product.name}}</h5>
					</div>
					<div class="ta-block-body">
						<div class="single-product-description">
							<p>{{model.product.description}}</p>
						</div>
						<div class="single-product-options-wrapper">
							{{#if model.product.options}}
								<h1>Select Options</h1>
								<form {{action 'submit' on="submit"}}>
									{{#each model.product.variants as |variant|}}
										<div class="single-product-option-wrapper">
											<div class="row">
												<div class="col-sm-5">
													<div class="radio">
													  <label>
													    {{input type="radio" value=variant.id name="product_id" action="radioChecked" on="focus-in"}}
													    {{upper-case model.product.name}} {{variant.option_value}}
													  </label>
													</div>
												</div>
												<div class="col-sm-2">
													<p class="single-product-option-info">{{variant.option_value}}</p>
												</div>
												<div class="col-sm-1">
													<p class="single-product-option-info">{{variant.weight}}</p>
												</div>
												<div class="col-sm-1">
													<p class="single-product-option-info">{{variant.quantity}}</p>
												</div>
												<div class="col-sm-1">
													<p class="single-product-option-info">{{variant.cubic_feet}}</p>
												</div>
												<div class="col-sm-2">
													<p class="price-display single-product-option-info">${{variant.price}}</p>
												</div>
											</div>
										</div>
									{{/each}}
									<div class="single-product-add-to-cart-wrapper">
										<div class="row">
											<div class="col-md- col-md-offset-7">
												<div class="row">
													<div class="col-md-3">
														<div class="form-group">
															<label for="singleProductQuantityInput">Quantity</label>
																{{input type="text" class="form-control" value=quantity id="singleProductQuantityInput"}}
														</div>
													</div>
													<div class="col-md-9">
														<button type="submit" class="btn btn-default">Add To Container</button>
													</div>
												</div>
											</div>
										</div>
									</div>
								</form>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div id="singleProductNewestProductWrapper">
		<div class="row">
			<div class="col-md-9">
				{{#ta-block model=model.newest_products block-wrapper="newest-products" title="newest products"}}{{/ta-block}}
			</div>
		</div>
	</div>
</div>