			<div id="editProductWraper">
	<div class="ta-block-wrapper add-product">
	<div class="ta-block-title">
		<h5>Edit Product</h5>
	</div>
	<div class="ta-block-body">
		<div class="add-product-form-wrapper">
			<form>
				<div class="form-group">
				    <img src="{{model.product.image_src}}">
				</div>
				<div class="form-group">
				    <label for="productNameInput">New Product Name</label>
				    {{input value=name class="form-control" id="productNameInput" placeholder=model.product.name}}
				</div>
				<div class="form-group">
				    <label for="productDescriptionTextarea">New Description</label>
				    {{textarea value=description class="form-control" id="productDescriptionTextarea" placeholder=model.product.description}}
				</div>

				{{#if model.product.options}}
					{{#each model.product.variants as |variant|}}
						<div class="single-product-option-wrapper">
							<div class="row">
								<div class="col-sm-5">
									<div class="radio">
									    <label>
										{{upper-case model.product.name}} {{variant.option_value}}
										</label>
									</div>
								</div>
								<div class="col-sm-2">
									{{input placeholder=variant.option_value class="form-control"}}
								</div>
								<div class="col-sm-1">
									{{input placeholder=variant.weight class="form-control"}}
								</div>
								<div class="col-sm-1">
									{{input placeholder=variant.quantity class="form-control"}}
								</div>
								<div class="col-sm-1">
									{{input placeholder=variant.cubic_feet class="form-control"}}
								</div>
								<div class="col-sm-2">
									{{input placeholder=variant.price class="form-control"}}
								</div>
							</div>
						</div>
					{{/each}}
				{{/if}}

				<div class="determine-if-variation-wrapper">
					<button style="margin-top: 2%;" class="btn btn-success" {{action 'displayAddVariation'}}>Edit</button>
				</div>
			</form>
		</div>
	</div>
</div>

</div>
