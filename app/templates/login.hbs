<div id="loginWrapper">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="login-wrapper">
				<form {{action 'authenticate' on='submit'}} id="loginForm">
				  <div class="form-group">
				  	<label for="identification">Login</label>
				  	{{input class="form-control" id='identification' placeholder='Enter Login' value=identification}}
				  </div>
				  <div class="form-group">
				  	<label for="password">Password</label>
				  	{{input class="form-control" id='password' placeholder='Enter Password' type='password' value=password}}
				  </div>
				  <button type="submit" class="btn btn-primary">Login</button>
				</form>
			</div>
		</div>
	</div>
	<div class="logos-wrapper">
				<ul class="list-logos">
					<li><img src="/assets/images/rhino-logo.png"></li>
					<li><img src="/assets/images/island-logo.png"></li>
					<li><img src="/assets/images/praetorian-logo.png"></li>
				</ul>
			</div>
</div>
